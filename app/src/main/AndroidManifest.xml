<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bajwa">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Permission required to store image -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Starter">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".newboston.MainActivity" />
        <activity android:name=".udacity_developing_android_apps.MainActivity" />
        <activity
            android:name=".udacity_developing_android_apps.GitHubRepSearch"
            android:label="Search Github Repo" />
        <activity
            android:name=".udacity_developing_android_apps.MyRecyclerView"
            android:label="RecyclerView Demo" />
        <activity android:name=".udacity_developing_android_apps.ImplicitIntents"></activity>
    </application>

</manifest>